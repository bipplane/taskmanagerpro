<UserControl x:Class="TaskManagerPro.Views.ServicesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Search & Actions Bar -->
        <Grid Grid.Row="0" Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" Text="{Binding SearchFilter, UpdateSourceTrigger=PropertyChanged}"
                     VerticalContentAlignment="Center"/>
            <Button Grid.Column="1" Content="Start" Command="{Binding StartServiceCommand}" Margin="8,0,0,0"
                    Background="#10B981"/>
            <Button Grid.Column="2" Content="Stop" Command="{Binding StopServiceCommand}" Margin="8,0,0,0"
                    Background="#EF4444"/>
            <Button Grid.Column="3" Content="Restart" Command="{Binding RestartServiceCommand}" Margin="8,0,0,0"
                    Background="#F59E0B"/>
            <Button Grid.Column="4" Content="Refresh" Command="{Binding RefreshServicesCommand}" Margin="8,0,0,0"/>
        </Grid>

        <!-- Services DataGrid -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding FilteredServices}"
                  SelectedItem="{Binding SelectedService}"
                  VirtualizingPanel.IsVirtualizing="True"
                  VirtualizingPanel.VirtualizationMode="Recycling"
                  EnableRowVirtualization="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding ServiceName}" Width="160"/>
                <DataGridTextColumn Header="Display Name" Binding="{Binding DisplayName}" Width="220"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="90"/>
                <DataGridTextColumn Header="Start Type" Binding="{Binding StartType}" Width="100"/>
                <DataGridTextColumn Header="Account" Binding="{Binding Account}" Width="140"/>
                <DataGridTextColumn Header="PID" Binding="{Binding ProcessId}" Width="60"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="300"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
