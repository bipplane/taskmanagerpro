<Window x:Class="TaskManagerPro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:TaskManagerPro.Views"
        Title="TaskManager Pro" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0"
                    SelectedIndex="{Binding SelectedTabIndex}"
                    Background="{StaticResource BackgroundBrush}"
                    BorderThickness="0">
            <TabItem Header="Processes">
                <views:ProcessListView DataContext="{Binding ProcessList}"/>
            </TabItem>
            <TabItem Header="Performance">
                <views:PerformanceView DataContext="{Binding Performance}"/>
            </TabItem>
            <TabItem Header="Services">
                <views:ServicesView DataContext="{Binding Services}"/>
            </TabItem>
            <TabItem Header="Network">
                <views:NetworkView DataContext="{Binding Network}"/>
            </TabItem>
            <TabItem Header="Startup">
                <views:StartupView DataContext="{Binding Startup}"/>
            </TabItem>
            <TabItem Header="Security">
                <views:ThreatDashboardView DataContext="{Binding ThreatDashboard}"/>
            </TabItem>
        </TabControl>

        <StatusBar Grid.Row="1" Background="{StaticResource SurfaceBrush}" Padding="8,4">
            <StatusBarItem>
                <TextBlock Text="{Binding ProcessList.ProcessCount, StringFormat='Processes: {0}'}"
                           Foreground="{StaticResource TextDimBrush}"/>
            </StatusBarItem>
            <Separator Background="{StaticResource BorderBrush}"/>
            <StatusBarItem>
                <TextBlock Text="{Binding StatusText}" Foreground="{StaticResource TextDimBrush}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
